{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-j=8"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "配置 CMake 项目"
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "构建 CMake 项目"
        },
        {
            "label": "Run Executable",
            "type": "shell",
            "command": "${workspaceFolder}/build/Debug/OpenGL_Play.exe", // 修改为你的可执行文件路径
            "dependsOn": [
                "CMake Build"
            ], // 依赖 CMake Build 任务
            "group": "test",
            "detail": "运行生成的可执行文件"
        }
    ]
}